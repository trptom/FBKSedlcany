<div class="well">
  <h1><%= I18n.t("messages.base.new_club") %></h1>
  <div class="row">
    <div class="span8 offset2">
      <%= form_for @team, :html => { :class => "form-horizontal"} do |f| %>
        <fieldset class="control-group">
          <%= f.label :title, I18n.t("messages.base.club_name"), :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :name, :class => "span3" %>
          </div>
        </fieldset>

        <fieldset class="control-group">
          <%= f.label :title, I18n.t("messages.base.short_name"), :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :short_name, :class => "span3" %>
          </div>
        </fieldset>

        <fieldset class="control-group">
          <%= f.label :title, I18n.t("messages.base.shortcut"), :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :shortcut, :class => "span3" %>
          </div>
        </fieldset>

        <fieldset class="control-group">
          <%= f.label :title, I18n.t("messages.base.cfbu_url_data"), :title => I18n.t("messages.base.cfbu_url_data_hint"), :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :cfbu_profile_data, :class => "span3" %>
          </div>
        </fieldset>

        <fieldset class="control-group">
          <span title="<%= I18n.t("messages.teams.form.logo_title") %>">
            <%= f.label :title, @messages[:logo], :class => "control-label" %>
          </span>
          <div class="controls">
            <%= f.hidden_field :logo_cache %>
            <%= f.file_field :logo %>
          </div>
        </fieldset>

        <fieldset class="form-actions">
          <%= f.submit @messages[:submit], :class => "btn btn-primary" %>
          <%= f.submit I18n.t("messages.base.form.reset"), :type => "reset", :class => "btn" %>

          <span class="btn-group">
            <span class="btn" data-toggle="dropdown">
              <%= I18n.t("messages.base.other_actions") %>
            </span>
            <span class="btn dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
            </span>
            <ul class="dropdown-menu">
              <li>
                <%= link_to I18n.t("messages.base.go_to_list"), "/teams/index_of_clubs" %>
              </li>
              <% if @messages[:detail] %>
                <li>
                  <%= link_to @messages[:detail], @team %>
                </li>
              <% end %>
              <% if @messages[:delete] %>
                <li>
                  <%= link_to @messages[:delete], @team, :method => :delete %>
                </li>
              <% end %>
            </ul>
          </span>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>