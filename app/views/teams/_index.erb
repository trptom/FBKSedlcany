<div class="well">
  <h1><%= @messages[:title] %></h1>
  <div class="row-fluid">
    <table class="index">
      <thead>
        <tr>
          <td><%= I18n.t("messages.base.id") %></td>
          <td><%= I18n.t("messages.base.name") %></td>
          <td><%= @messages[:count] %></td>
          <td class="btn-group">&nbsp;</td>
        </tr>
      </thead>
      <tbody>
        <% for team in @teams %>
          <tr>
            <td><%= team.id %></td>
            <td>
              <%= team.logo_image(:small, {:width => "25px", :height => "25px"}) %>
              <%= team.name %>
            </td>
            <td><%= team.is_club ? (team.teams.count-1) : team.players.count %></td>
            <td class="btn-group">
              <span class="btn" data-toggle="dropdown">
                <%= I18n.t("messages.base.actions") %>
              </span>
              <span class="btn dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
              </span>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to I18n.t("messages.base.show"), team %>
                </li>
                <li>
                  <%= link_to I18n.t("messages.base.edit"), edit_team_path(team) %>
                </li>
                <li>
                  <% if team.players.count == 0 %>
                    <%= link_to I18n.t("messages.base.delete"), team,
                          :confirm => @messages[:delete_confirmation],
                          :method => :delete %>
                  <% end %>
                </li>
              </ul>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="4">
            <%= link_to I18n.t("messages.base.new_team_or_club"), @new_url, :class => "btn" %>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>