<div class="well">
  <h1><%= I18n.t("messages.base.list_of_competitions") %></h1>
  <div class="row-fluid">
    <table class="index">
      <thead>
        <tr>
          <td><%= I18n.t("messages.base.id") %></td>
          <td><%= I18n.t("messages.base.name") %></td>
          <td><%= I18n.t("messages.base.short_name") %></td>
          <td><%= I18n.t("messages.base.shortcut") %></td>
          <td><%= I18n.t("messages.base.level") %></td>
          <td><%= I18n.t("messages.base.group") %></td>
          <td>&nbsp;</td>
        </tr>
      </thead>
      <tbody>
        <% for league in @leagues %>
          <tr>
            <td><%= league.id %></td>
            <td>
              <%= link_to league.name, league %>
            </td>
            <td><%= league.short_name %></td>
            <td><%= league.shortcut %></td>
            <td><%= league.level %></td>
            <td><%= league.group %></td>
            <td class="btn-group">
              <span class="btn" data-toggle="dropdown">
                <%= I18n.t("messages.base.actions") %>
              </span>
              <span class="btn dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
              </span>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to I18n.t("messages.base.show"), league %>
                </li>
                <li>
                  <%= link_to I18n.t("messages.base.edit"), edit_league_path(league) %>
                </li>
                <li>
                  <%= link_to I18n.t("messages.base.delete"), league, :method => :delete %>
                </li>
              </ul>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="6">
            <%= link_to I18n.t("messages.base.create_competition"), new_league_path, :class => "btn" %>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>