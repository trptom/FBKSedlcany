<div class="well">
  <h1><%= @form_title %></h1>
  <div class="row">
    <div class="span8 offset2">
      <%= form_for @league, :html => { :class => "form-horizontal"} do |f| %>
        <fieldset class="control-group">
          <%= f.label :title, I18n.t("messages.base.name"), :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :name, :class => "span3" %>
          </div>
        </fieldset>

        <fieldset class="control-group">
          <%= f.label :title, I18n.t("messages.base.short_name"), :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :short_name, :class => "span3" %>
          </div>
        </fieldset>

        <fieldset class="control-group">
          <%= f.label :title, I18n.t("messages.base.shortcut"), :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :shortcut, :class => "span3" %>
          </div>
        </fieldset>

        <fieldset class="control-group">
          <%= f.label :title, I18n.t("messages.base.level"), :class => "control-label" %>
          <div class="controls">
            <%= f.select :level, MIN_COMPETITION_LEVEL..MAX_COMPETITION_LEVEL, { :class => "span3", :include_blank => true } %>
          </div>
        </fieldset>

        <fieldset class="control-group">
          <%= f.label :title, I18n.t("messages.base.group"), :class => "control-label" %>
          <div class="controls">
            <%= f.select :group, MIN_COMPETITION_GROUP..MAX_COMPETITION_GROUP, { :class => "span3", :include_blank => true } %>
          </div>
        </fieldset>

        <fieldset class="form-actions">
          <%= f.submit @form_submit, :class => "btn btn-primary" %>
          <%= f.submit I18n.t("messages.base.form.reset"), :type => "reset", :class => "btn" %>

          <span class="btn-group">
            <span class="btn" data-toggle="dropdown">
              <%= I18n.t("messages.base.other_actions") %>
            </span>
            <span class="btn dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
            </span>
            <ul class="dropdown-menu">
              <li>
                <%= link_to I18n.t("messages.base.go_to_list"), leagues_path %>
              </li>
              <li>
                <%= link_to I18n.t("messages.base.go_to_detail"), @league %>
              </li>
              <li>
                <%= link_to I18n.t("messages.base.delete_competition"), @league, :method => :delete %>
              </li>
            </ul>
          </span>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>