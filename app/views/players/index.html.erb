<div class="well">
  <h1><%= I18n.t("messages.players.index.title") %></h1>
  <div class="row-fluid">
    <table class="index">
      <thead>
        <tr>
          <td><%= I18n.t("messages.base.id") %></td>
          <td><%= I18n.t("messages.base.name") %></td>
          <td><%= I18n.t("messages.base.birthday") %></td>
          <td><%= I18n.t("messages.base.team") %></td>
          <td class="btn-group">&nbsp;</td>
        </tr>
      </thead>
      <tbody>
        <% for player in @players %>
          <tr>
            <td><%= player.id %></td>
            <td>
              <%= player.get_name_for_list %>
              <%= link_to player.cfbu_profile_link do %>
                <span class="icon-list-alt"></span>
              <% end %>
            </td>
            <td><%= I18n.l player.birthday %></td>
            <td><%= player.team ? player.team.name : nil %></td>
            <td class="btn-group">
              <span class="btn" data-toggle="dropdown">
                <%= I18n.t("messages.base.actions") %>
              </span>
              <span class="btn dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
              </span>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to I18n.t("messages.base.show"), player %>
                </li>
                <li>
                  <%= link_to I18n.t("messages.base.edit"), edit_player_path(player) %>
                </li>
                <li>
                  <%= link_to I18n.t("messages.base.delete"), player, :method => :delete %>
                </li>
              </ul>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="5">
            <%= link_to I18n.t("messages.base.create_player"), new_player_path, :class => "btn" %>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>