<% if @articles %>
  <% for article in @articles %>
    <div class="well">
      <h4><%= article.title %></h4>
      <%= article.get_annotation %>
      <div class="footer">
        <%= I18n.t("messages.base.author") %>: <%= link_to article.user.username, article.user %> |
        <%= I18n.t("messages.base.published") %>: <%= I18n.l article.created_at %> |
        <%= I18n.t("messages.base.comments_count") %>: <%= article.comments.count %> |
        <%= link_to I18n.t("messages.articles.list.show_article"), article %>
      </div>
    </div>
  <% end %>
<% end %>