<!DOCTYPE html>
<html>
  <head>
    <title>TJ Tatran Sedlƒçany florbal</title>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <% for file in get_additional_styles %>
      <%= stylesheet_link_tag file, :media => "all" %>
    <% end %>
    <%= javascript_include_tag "application" %>
    <% for file in get_additional_scripts %>
      <%= javascript_include_tag file %>
    <% end %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render "templates/menu" %>
    <%= render "templates/login_form" %>
    <div id="page" class="container">
      <%# titulek jen pokud pro nej mam message %>
      <% if !(I18n.t "messages.titles." + params[:controller] + "." + params[:action]).starts_with?("translation missing: ") %>
        <div id="page-title">
          <%= I18n.t "messages.titles." + params[:controller] + "." + params[:action], @title_params ? @title_params : nil %>
        </div>
      <% end %>
      <div class="content">
        <%= render "templates/notes" %>
        <%= render "templates/errors" %>
        <%= render "templates/rightside" %>
        <div id="page-data">
          <%= yield %>
        </div>
      </div>
    </div>
