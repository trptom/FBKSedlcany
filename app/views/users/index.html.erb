<div class="well">
  <h1><%= I18n.t("messages.users.index.title") %></h1>
  <div class="row-fluid">
    <table>
      <thead>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% for user in User.all %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.activation_state %></td>
            <td><%#= user.crypted_password %></td>
            <td><%#= user.salt %></td>
            <td><%= user.first_name %></td>
            <td><%= user.second_name %></td>
            <td class="btn-group">
              <%= link_to I18n.t("messages.base.show"), user, :class => "btn" %>
              <%= link_to I18n.t("messages.base.edit"), edit_user_path(user), :class => "btn" %>
              <%= link_to I18n.t("messages.base.activate"), "/users/#{user.id}/activate", :class => "btn" %>
              <%= link_to I18n.t("messages.base.block"), "/users/#{user.id}/block", :class => "btn" %>
              <%= link_to I18n.t("messages.base.delete"), user, :method => :delete, :class => "btn" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>