<div class="well">
  <h1><%= I18n.t("messages.users.change_password.title") %></h1>
  <div class="row">
    <div class="span8 offset2">
      <%= form_for @user, :url => { :action => "update_password", :id => @user.id }, :html => { :class => "form-horizontal"} do |f| %>
        <fieldset class="control-group">
          <%= f.label :title, I18n.t("messages.base.password_confirmation"), :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :old_password, :value => "", :class => "span3" %>
          </div>
        </fieldset>

        <fieldset class="control-group">
          <%= f.label :title, I18n.t("messages.base.password"), :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password, :value => "", :class => "span3" %>
          </div>
        </fieldset>

        <fieldset class="control-group">
          <%= f.label :title, I18n.t("messages.base.password_confirmation"), :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password_confirmation, :value => "", :class => "span3" %>
          </div>
        </fieldset>

        <fieldset class="form-actions">
          <%= f.submit I18n.t("messages.base.change_password"), :class => "btn btn-primary" %>
          <%= f.submit I18n.t("messages.base.form.reset"), :type => "reset", :class => "btn" %>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>